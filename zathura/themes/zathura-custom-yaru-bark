# Synctex

set synctex "true"
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"

# Basic Settings

set zoom-center "true"
set selection-clipboard "clipboard"
set render-loading "false"
set window-width 1280
set window-height 1080
set adjust-open "best-fit"

map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
map <C-v> toggle_fullscreen

# -------------

set window-title-basename "true"

# Earthy color theme inspired by wallpaper and Kitty, adjusted for Blur my Shell

set notification-error-bg       #A54242      # Muted red, matches Kitty
set notification-error-fg       #FFFFFF      # Pure white, matches Kitty foreground
set notification-warning-bg     #DE935F      # Muted yellow, earthy tone from Kitty
set notification-warning-fg     #2A2A2A      # Dark grey-brown, matches background
set notification-bg             rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set notification-fg             #FFFFFF      # Pure white, matches Kitty foreground

set completion-bg               rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set completion-fg               #A69B82      # Warm beige-grey, matches Rofi placeholder
set completion-group-bg         rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set completion-group-fg         #A69B82      # Warm beige-grey, matches Rofi placeholder
set completion-highlight-bg     #787859      # Muted olive-green, matches Rofi selected-background
set completion-highlight-fg     #FFFFFF      # Pure white, matches Kitty foreground

set index-bg                    rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set index-fg                    #A69B82      # Warm beige-grey, matches Rofi secondary text
set index-active-bg             #787859      # Muted olive-green, matches Rofi selected-background
set index-active-fg             #FFFFFF      # Pure white, matches Kitty foreground

set inputbar-bg                 #787859      # Muted olive-green, matches Rofi selected-background
set inputbar-fg                 #FFFFFF      # Pure white, matches Kitty foreground
set statusbar-bg                #787859      # Muted olive-green, matches Rofi selected-background
set statusbar-fg                #A69B82      # Warm beige-grey, matches Rofi secondary text

set highlight-color             rgba(140,148,64,0.5)   # Green (foliage), semi-transparent
set highlight-active-color      rgba(95,129,157,0.5)   # Blue (sky), semi-transparent

set default-bg                  rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set default-fg                  #FFFFFF      # Pure white, matches Kitty foreground

set render-loading              "true"
set render-loading-bg           rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set render-loading-fg           #FFFFFF      # Pure white, matches Kitty foreground

#
# Recolor mode settings
#

set recolor-lightcolor          rgba(42,42,42,0.8)  # Dark grey-brown, semi-transparent for Blur my Shell
set recolor-darkcolor           #FFFFFF      # Pure white, matches Kitty foreground

#
# Startup options
#
set adjust-open width           
set recolor                     "true"
set recolor-keephue             "true"      # keep original color

# set backend to avoid errors
set database "sqlite"
