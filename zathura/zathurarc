# Synctex

set synctex "true"
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"

# Basic Settings

# set highlight-transparency .1
set zoom-center "true"
set selection-clipboard "clipboard"
set render-loading "false"
# set window-width 960
set window-width 1280
set window-height 1080
set adjust-open "best-fit"

map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
# map k 5k
# map j 5k
map <C-v> toggle_fullscreen

# -------------

set window-title-basename "true"

set notification-error-bg       "#282828" # bg
set notification-error-fg       "#A54242" # muted red from Kitty
set notification-warning-bg     "#282828" # bg
set notification-warning-fg     "#fabd2f" # bright:yellow
set notification-bg             "#282828" # bg
set notification-fg             "#b8bb26" # bright:green

set completion-bg               "#504945" # bg2
set completion-fg               "#ebdbb2" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#C0B499" # match Kitty inactive_tab_foreground
set completion-highlight-bg     "#787859" # match Neovim Visual background
set completion-highlight-fg     "#D4D4D4" # match Neovim Visual foreground

# Define the color in index mode
set index-bg                    "#504945" # bg2
set index-fg                    "#C0B499" # match Kitty inactive_tab_foreground
set index-active-bg             "#83a598" # bright:blue
set index-active-fg             "#504945" # bg2

set inputbar-bg                 "#282828" # bg
set inputbar-fg                 "#F0F0F0" # match Kitty foreground

set statusbar-bg                "#282828" # bg
set statusbar-fg                "#ebdbb2" # fg

set highlight-color             "#F0C674" # yellow from Kitty
set highlight-active-color      "#DE935F" # orange from Kitty

set default-bg                  "#282828" # bg
set default-fg                  "#F0F0F0" # match Kitty foreground
set render-loading              true
set render-loading-bg           "#282828" # bg
set render-loading-fg           "#ebdbb2" # fg

# Recolor book content's color
set recolor-lightcolor          "#282828" # bg
set recolor-darkcolor           "#ebdbb2" # fg
#
# Startup options
#
set adjust-open width           
set recolor                     "true"
set recolor-keephue           "true"      # keep original color
# set recolor-reverse-video     "true"

# set backend to avoid errors
set database "sqlite"
